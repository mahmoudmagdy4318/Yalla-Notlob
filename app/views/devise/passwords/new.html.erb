
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },:validate=>true) do |f| %>
  <article class="card-body mx-auto" style="max-width: 400px;">
  <h2>Forgot your password?</h2>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",autocomplete: "email",placeholder:"Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"btn btn-primary btn-block mt-3" %>
  </div>
  <article>
<% end %>

