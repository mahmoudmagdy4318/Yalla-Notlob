<div class="container overflow-auto" style="border-style: dashed; ">
   <h1>Friends</h1>
   <form accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post">
    <div class="input-group">
      <select class="custom-select" id="inputGroupSelect04">
        <option selected>Choose your Friend...</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select>
      <div class="input-group-append">
        <button class="btn btn-success btn-outline-secondary" type="button">Add</button>
      </div>
    </div>
  </form>
  <div class="container overflow-auto" style="overflow-y: scroll; border-style: dashed;height:400px; width: 60%;margin-top:20px;margin-bottom:20px;justify-content: center;">
    <div class="row ">
    <% @users.each do |user| %>
        <div class="col-md-6">
          <div class="media">
              <div class="media-left">
                <a href="#">
                <img class="media-object"  src="https://upload.wikimedia.org/wikipedia/commons/d/d2/Crystal_Clear_kdm_user_female.svg" alt="Smiley face" height="62" width="62" alt="...">
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading"><%= user.name %></h4>
              </div>
          </div>
        </div>
          <% end %>

        <div class="col-md-6">
          <div class="media">
              <div class="media-left">
                <a href="#">
                <img class="media-object"  src="https://upload.wikimedia.org/wikipedia/commons/d/d2/Crystal_Clear_kdm_user_female.svg" alt="Smiley face" height="62" width="62" alt="...">
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading">Media heading</h4>
              </div>
          </div>
        </div>
       
    </div>
  </div>
  </div>
</div>